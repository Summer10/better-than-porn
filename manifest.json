{
  "name": "Better than porn",
  "description": "When you visit an unproductive site, do something better instead",
  "version": "0.1.1",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["tabs"],
  "action": {
    "default_title": "Be better than porn!",
    "default_icon": {
      "16": "/images/active-icon.png",
      "32": "/images/active-icon.png",
      "64": "/images/active-icon.png",
      "128": "/images/active-icon.png"
    }
  },
  "icons": {
    "16": "/images/active-icon.png",
    "32": "/images/active-icon.png",
    "64": "/images/active-icon.png",
    "128": "/images/active-icon.png"
  },
  "options_page": "options.html"
}
